pipeline {   
    agent any
    stages {
        stage('Clone Repo') {
           steps {
            sh 'rm -rf dockertest1'
            sh 'git clone https://github.com/mavrick202/dockertest1.git'  
            }     
        }    
        stage('Build Docker Image') {
            steps {
            sh 'cd /var/lib/jenkins/workspace/jenkin2/dockertest1'
            sh 'cp /var/lib/jenkins/workspace/jenkin2/dockertest1/* /var/lib/jenkins/workspace/jenkin2'
            sh 'docker build -t somu1996/jenkinspipeline:v2 .'
            }
        }
        stage('Push Image to Docker Hub') {
           steps {
            sh 'docker push somu1996/jenkinspipeline:v2'
            }
        }
        stage('Deploy to Docker Host') {
           steps {
            sh 'docker -H tcp://172.31.15.100:2375 stop webapp'
            sh 'docker -H tcp://172.31.15.100:2375 run --rm -dit --name webapp -p 7000:80 --hostname webapp somu1996/jenkinspipeline:v1'
            }
        }
        stage('Check webapp reachability') {
           steps {
            sh 'curl http://ec2-13-233-193-226.ap-south-1.compute.amazonaws.com:7000'
            }
        }
    }
}
